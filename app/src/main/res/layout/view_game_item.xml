<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/game_image"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_bg_game"/>

            <TextView
                android:id="@+id/game_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:layout_margin="8dp"
                android:text="+100 poin"
                android:textStyle="bold"
                android:background="@drawable/bg_point"
                android:backgroundTint="@color/white"/>
        </FrameLayout>

        <TextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Game"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"/>

<!--        <TextView-->
<!--            android:id="@+id/game_desc"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Belajar bersama Talkee, selesaikan semua kelas dan tambah wawasanmu sekarang!"-->
<!--            android:paddingHorizontal="12dp"-->
<!--            android:paddingBottom="12dp"/>-->
    </LinearLayout>

</androidx.cardview.widget.CardView>