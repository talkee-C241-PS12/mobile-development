<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameCameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="10dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/bg_circular"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/game_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Game Talkee"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="10dp"
                android:src="@drawable/ic_close"
                android:visibility="invisible"
                android:background="@drawable/bg_circular"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:indeterminate="false"
            android:layout_marginHorizontal="20dp"
            android:progressTint="@color/primary"/>

        <TextView
            android:id="@+id/question_box"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@drawable/bg_game_box"
            android:layout_marginVertical="30dp"
            android:layout_weight="1"
            android:text="A"
            android:textSize="100sp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Yuk kita peragakan! (100 poin)"/>

        <LinearLayout
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_primary_button"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_camera"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buka Kamera"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black12"
        android:gravity="center"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_check"
                app:tint="@color/correct" />

            <TextView
                android:id="@+id/dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yup, kamu hebat!"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dialog_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+100 poin"
                android:textSize="20sp"
                android:textColor="@color/point"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <VideoView
        android:id="@+id/video_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_margin="24dp"/>
</FrameLayout>